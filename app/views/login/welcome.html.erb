<%= stylesheet_link_tag "login", media: "all", "data-turbolinks-track" => "reload" %>

 <% if flash[:error]%>
        <div class="alert alert-warning" role="alert">
                <%=  flash[:error] = "You must be logged in to access that!"%>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
<%end%>
 

<section class="intro">
        <div class="intro-align">
            <h1 class="intro-align-title"> 
                       <%= @time %>  
                <% if logged_in? %>
                        <h2 class="intro-align-greetings"> Welcome, <%= current_user.username%></h2> 
                <%end%>  
            <h2 class="intro-align-sub-title"> <% @quotes.each do |quote| %>
                    <%= quote.description%></h2>
                <%end%>   
                 <h2 class="intro-align-sub-title">  <%= @tags.name%></h2>
                 
        </div>
</section>



  