<% if flash[:errors]%>
    <% flash[:errors].each do |error| %>
        <div class="alert alert-danger" role="alert">
                <%= error%>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    <% end %>
<%end%>

<div class="container mt-5 mr-5">
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-body">
                    <%= form_for @user do|f|%>
                         <h3 class="text-center font-bold py-4"><strong>Register New User</strong></h3>
                                <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                             <span class="input-group-text" id="inputGroup-sizing-default"><i class="fas fa-envelope"></i></span>
                                        </div>
                                               <%= f.text_field  :email, placeholder: "Enter email",class: "form-control" %>                  
                                </div>
                                <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                             <span class="input-group-text" id="inputGroup-sizing-default"><i class="fas fa-user"></i></i></span>
                                        </div>
                                               <%= f.text_field  :username, placeholder: "Enter Username",class: "form-control" %>                  
                                </div>
                                <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                             <span class="input-group-text" id="inputGroup-sizing-default"><i class="fas fa-lock"></i></i></span>
                                        </div>
                                               <%= f.password_field  :password, placeholder: "Enter password",class: "form-control" %>                  
                                </div>
                                <div class="text-center py-4">
                                    <%= f.submit "Register", class: "btn btn-primary" %>
                                </div>
                 <%end%>                       
            </div>
        </div>
    </div>
</div>




