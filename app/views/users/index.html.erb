                             <%= button_to  "Add New User",new_user_path, :class => "btn btn-primary btn-md",method: :get%>   
                          <% end %>
                    </div>

                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th scope="col">user_id</th>
                            <th scope="col">UserName</th>
                            <th scope="col">Action</th>
                          </tr>
                        </thead>
                        <tbody>
                            <% @users.each do |user| %>
                          <tr>
                            <th scope="row"><%= user.id%></th>
                            <td><%=  user.username %></li></td>
                            <td><%= link_to "Show Details", edit_user_path(user)%></td>
                            <td>
